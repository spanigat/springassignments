<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
 
  
    
  
<bean id="customer" class="com.shilpa.Customer">  
<property name="customerId" value="1"></property>  
<property name="customerName" value="Shilp panigatti"></property> 
<property name="customerContact" value="123456789"></property>
<property name="customerAddress" value="Banglore"></property>
 <property name="address" ref="address1"></property>
</bean> 

 
    <bean id="address1" class="com.shilpa.Address">  
<property name="city" value="Banglore"></property>  
<property name="street" value="1st main 2nd cross"></property>  
<property name="state" value="karnataka"></property>  
<property name="zip" value="123"></property>  
</bean> 
</beans>
